{
    "name": "sync-party-server",
    "version": "0.7.0",
    "main": "index.js",
    "private": true,
    "author": "steeelydan",
    "license": "MIT",
    "scripts": {
        "setup": "([ -d './uploads' ] && echo './uploads folder exists.') || (mkdir './uploads' && echo './uploads folder created.')",
        "doc": "apidoc -i src/ -o doc/",
        "build": "tsc",
        "start": "npm run setup && npm run doc && tsc-watch --project . --outDir ./build --onSuccess \"nodemon ./build/index.js\"",
        "start-production": "sudo pm2 start ./build/index.js",
        "stop": "sudo pm2 stop all && sudo pm2 delete all",
        "deploy": "npm ci && npm run setup && npm run build && npm run start-production && sudo pm2 log"
    },
    "dependencies": {
        "@hapi/joi": "~17.1.1",
        "bcryptjs": "~2.4.3",
        "body-parser": "~1.19.0",
        "compression": "~1.7.4",
        "connect-session-sequelize": "^7.0.3",
        "cookie-parser": "~1.4.5",
        "dotenv": "~8.2.0",
        "express": "~4.17.1",
        "express-rate-limit": "~5.1.1",
        "express-session": "~1.17.1",
        "helmet": "~3.23.0",
        "morgan": "~1.10.0",
        "multer": "~1.4.2",
        "passport": "~0.4.1",
        "passport-local": "~1.0.0",
        "passport.socketio": "~3.7.0",
        "peer": "~0.5.3",
        "sequelize": "~6.3.5",
        "socket.io": "~2.3.0",
        "sqlite3": "~4.1.1",
        "uuid": "~7.0.3",
        "winston": "~3.2.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "~2.4.2",
        "@types/compression": "~1.7.0",
        "@types/cookie-parser": "~1.4.2",
        "@types/express": "~4.17.6",
        "@types/express-rate-limit": "~5.0.0",
        "@types/express-session": "~1.17.0",
        "@types/hapi__joi": "^17.1.6",
        "@types/helmet": "0.0.47",
        "@types/morgan": "~1.9.1",
        "@types/multer": "~1.4.3",
        "@types/node": "~14.0.13",
        "@types/passport-local": "~1.0.33",
        "@types/passport.socketio": "~3.7.2",
        "@types/prettier": "~2.0.1",
        "@types/sequelize": "~4.28.9",
        "@types/socket.io": "~2.1.8",
        "@types/uuid": "~8.0.0",
        "@types/validator": "~13.0.0",
        "@types/winston": "~2.4.4",
        "apidoc": "~0.20.1",
        "nodemon": "~2.0.3",
        "prettier": "~2.0.5",
        "tsc-watch": "~4.2.9",
        "tslint": "~6.1.3",
        "tslint-config-prettier": "~1.18.0",
        "typescript": "^4.0.3"
    }
}
