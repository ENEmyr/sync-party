    "scripts": {
        "setup": "([ -d './uploads' ] && echo './uploads folder exists.') || (mkdir './uploads' && echo './uploads folder created.')",
        "doc": "apidoc -i src/ -o doc/",
        "build": "tsc",
        "start": "npm run setup && npm run doc && tsc-watch --project . --outDir ./dist --onSuccess \"nodemon ./dist/index.js\"",
        "start-production": "pm2 start ./dist/index.js",
        "stop": "pm2 stop all && pm2 delete all",
        "deploy": "npm install && npm run setup && npm run build && sudo npm run start-production && sudo pm2 log"
    },
