{
    "name": "sync-party-server",
    "type": "module",
    "version": "0.8.1",
    "main": "index.js",
    "private": true,
    "author": "steeelydan",
    "license": "GPL-3.0",
    "scripts": {
        "setup": "([ -d './uploads' ] && echo './uploads folder exists.') || (mkdir './uploads' && echo './uploads folder created.')",
        "doc": "apidoc -i src/ -o doc/",
        "build": "tsc",
        "start": "npm run setup && npm run doc && tsc-watch --project . --outDir ./build --onSuccess \"nodemon ./build/index.js\"",
        "start-production": "pm2 start ./build/index.js --name sync-party",
        "stop": "pm2 stop sync-party",
        "deploy": "npm ci && npm run setup && npm run build && npm run start-production && pm2 log"
    },
    "dependencies": {
        "@hapi/joi": "17.1.1",
        "bcryptjs": "2.4.3",
        "body-parser": "1.19.1",
        "cheerio": "1.0.0-rc.10",
        "compression": "1.7.4",
        "connect-session-sequelize": "7.1.2",
        "cookie-parser": "1.4.6",
        "cron": "1.8.2",
        "dotenv": "14.2.0",
        "express": "4.17.2",
        "express-rate-limit": "6.1.0",
        "express-session": "1.17.2",
        "got": "12.0.1",
        "helmet": "5.0.1",
        "morgan": "1.10.0",
        "multer": "1.4.4",
        "passport": "0.5.2",
        "passport-local": "1.0.0",
        "passport.socketio": "3.7.0",
        "peer": "0.6.1",
        "sequelize": "6.13.0",
        "socket.io": "4.4.1",
        "sqlite3": "5.0.2",
        "uuid": "8.3.2",
        "winston": "3.4.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "2.4.2",
        "@types/cheerio": "0.22.30",
        "@types/compression": "1.7.2",
        "@types/cookie-parser": "1.4.2",
        "@types/cron": "1.7.3",
        "@types/express": "4.17.13",
        "@types/express-session": "1.17.4",
        "@types/hapi__joi": "17.1.8",
        "@types/morgan": "1.9.3",
        "@types/multer": "1.4.7",
        "@types/node": "17.0.10",
        "@types/passport-local": "1.0.34",
        "@types/prettier": "2.4.3",
        "@types/sequelize": "4.28.11",
