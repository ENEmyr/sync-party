{
    "compilerOptions": {
        "module": "ES6",
        "esModuleInterop": true,
        "target": "es6",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*"]
}
